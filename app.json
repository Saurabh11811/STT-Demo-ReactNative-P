{
  "expo": {
    "name": "stt-demo-reactnative",
    "slug": "stt-demo-reactnative",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "scheme": "stt-demo-reactnative",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone to record audio for transcription.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to transcribe audio."
      },
      "bundleIdentifier": "com.saurabhagarwal.sttdemoreactnative"
    },
    "android": {
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.saurabhagarwal.sttdemoreactnative"
    }
  }
}
